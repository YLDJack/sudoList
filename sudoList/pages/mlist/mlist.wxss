/* pages/mlist/mlist.wxss */
.taskListView{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100vw;
  background-color: #EFEFF4;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}

.AddTaskBtn{
  position: fixed;
  bottom: 100rpx;
  left: 50vw;
  margin-left: -250rpx;
  width: 500rpx;
}
.taskListItemView{
  margin-top: 20rpx;
  width: 700rpx;
  min-height: 150rpx;
  background-color: white;
  flex-shrink: 0;
  box-sizing: border-box;
  padding: 20rpx;
}
.taskListItem__title{
  font-size: 34rpx;
}